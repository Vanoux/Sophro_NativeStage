{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}

<div class="example-wrapper m-5 p-5">
	<h2 class="my-5">Renouvellement du mot de passe</h2>

	{{form_start(form)}}

	{{form_row(form.password, {'label': 'Mot de passe : ','attr': {'placeholder': 'Votre Mot de passe...'}})}}
	{{form_row(form.confirm_password, {'label': 'Confirmer votre mot de passe : ','attr': {'placeholder': 'Répéter votre
	mot de passe...'}})}}
	<button class="btn btn btn-success" type="submit"title="Envoyer : Réinitialisation de votre mot de passe" >Envoyer</button>

	{{form_end(form)}}
</div>

{% endblock %}