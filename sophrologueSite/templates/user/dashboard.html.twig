{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin!{% endblock %}

{% block body %}

<div class="example-wrapper">

    <h1 class="text-center">✅ Accueil Admin ✅</h1>
    {% if is_granted('ROLE_ADMIN') %} <!-- is_granted() = méthode de sécurité pour que la hiérarchie des rôles fonctionne **granted : bénéficiaire**-->
        <h3 class="text-center">Bonjour {{ app.user.username }} !</h3>
    {% endif %}

</div>
{% endblock %}
