{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="example-wrapper m-5 p-5">

<h2 class="mb-5">Connectez-vous</h2>

<form method="post" action="{{ path('security_login') }}" class="form-login">
    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="form-group">
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="text" name="_username" id="inputEmail" class="form-control" placeholder="Adresse email..."
            required autofocus>
    </div>
    <div class="form-group">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Mot de passe..."
            required>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="form-group">
        <button class="btn btn-success mt-4" type="submit" title="Connectez-vous !">Connexion</button>
    </div>

    <div class="mt-5">
        <a href="{{ path('request_resetting')}}" title="Mot de passe oublié ?">Mot de passe oublié </a>
    </div>

</form>

</div>

