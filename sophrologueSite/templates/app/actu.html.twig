{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}

<div class="actuAccueil">

    <div class="jumbotron jumbotron-fluid shadow jumbotronTitle">
        <div class="container">
            <h1 class="display-5 text-center">Retrouvez ici toutes mes dernières actualités</h1>
        </div>
    </div>

    {# *** Liste des articles *** #}
    {% for article in articles %}
    <div class="container">
        <div class="card m-4 shadow">
            <img src="{{ asset('uploads/photos/')~ article.image }}" class="card-img-top" alt="image_actualités">
            <div class="card-body">
                <section class="article text-center">
                    <article>
                        <h2 class="mt-3">{{ article.titre }}</h2>
                        <div class="metadata mt-3">Ecrit le {{ article.date | date('d/m/Y') }}</div>
                        <div class="content mt-3">
                            <p>{{ article.contenu | raw }}</p>
                        </div>
                        <hr>
                        <a href="{{ path('actu_show', {'id': article.id})}}" class="btnSuite btn px-4 py-2" title="Lire la suite de l'article d'actualité">Lire la
                            suite</a>
                    </article>
                </section>
            </div>
        </div>
    </div>

