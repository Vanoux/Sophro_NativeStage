{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
<div class="p-2 actu">
    <div class="container">
        <div class="card m-4 shadow">
            <div class="card-body">
                <section class="article text-center">
                    <article>
                        <h2 class="pb-3 titrePerso">{{ article.titre }}</h2>
                        <h6>Les conseils d'Anne Sophie</h6>
                        <div class="metadata">Ecrit le {{ article.date | date('d/m/Y') }}</div>
                        <div class="content">
                            <img src="{{ asset('uploads/photos/')~ article.image }}" class="img-fluid p-5" alt="image d'actualité">
                            <p>{{ article.contenu | raw }}</p>
                            {# **** Partage réseaux sociaux **** #}

                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('myActu') }}" class="btn btnSuite mt-5 px-4 py-2 effetHover" title="Retour à la liste : Mes actualités">Retour
                                à la liste</a>
                            {% else %}
                            <a href="{{ path('actu') }}" class="btn btnSuite mt-5 px-4 py-2 effetHover" title="Retour à la liste : Actualités">Retour
                                à la liste</a>
                            {% endif %}
                        </div>
                    </article>
                </section>
            </div>
        </div>
    </div>
</div>

{% endblock %}