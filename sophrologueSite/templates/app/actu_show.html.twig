{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}

<div class="container m-3">
    <article>
        <h2 class="pb-3">{{ article.titre }}</h2>
        <div class="metadata">Ecrit le {{ article.date | date('d/m/Y') }}</div>
        <div class="content">
            <img src="{{ asset('uploads/photos/')~ article.image }}" alt="image d'actualité">
            <p>{{ article.contenu | raw }}</p>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('myActu') }}" class="btn btn-primary btn-sm">Retour à la liste</a>
            {% else %}
            <a href="{{ path('actu') }}" class="btn btn-primary btn-sm">Retour à la liste</a>
            {% endif %}
        </div>
    </article>
</div>

{% endblock %}