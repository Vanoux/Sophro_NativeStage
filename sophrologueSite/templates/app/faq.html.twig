{% extends 'base.html.twig' %}

{% block title %}Foire à Questions{% endblock %}

{% block body %}

<div class="pb-2">

    <!-- Fil d'ariane -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}" class="accueilBreadcrumb">Accueil</a></li>
            <li class="breadcrumb-item text-white active" aria-current="page">Foire aux questions</li>
        </ol>
    </nav>

    <h2 class="text-center mx-1">Foire aux questions</h2>
    {# *** Liste des questions / réponses *** #}
    {% for faq in faqs |sort|reverse %}
    <div class="container">
        <div class="card my-5 cardContour effetShadow">
            <div class="card-body">
                <section class="article">
                    <article>
                        <h5 class="card-title text-center">{{ faq.question }}</h5>
                        <hr>
                        <div class="content">
                            <p class="card-text">{{ faq.reponse }}</p>
                        </div>
                    </article>
                </section>
            </div>
        </div>
    </div>
    {% endfor %}
    <!-- Retour liste Faq dashboard si admin connecté -->
    <div class="text-center">
        {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btnSuite mt-5 px-4 py-2 effetHover" href="{{ path('myFaq') }}" title="Retour à la gestion de la FAQ">Retour
            à la Faq Admin</a>
        {% else %}
        <a href="{{ path('home') }}" class="btn btnSuite mt-5 px-4 py-2 effetHover" title="Retour à la l'accueil">Retour
            à l'accueil</a>
        {% endif %}
    </div>
</div>
{% endblock %}