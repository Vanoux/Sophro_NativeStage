{% extends 'base.html.twig' %}

{% block title %}Foire à Questions{% endblock %}

{% block body %}
    <h1>Foire à questions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Question</th>
                <th>Reponse</th>
            </tr>
        </thead>
        <tbody>
        {% for faq in faqs %}
            <tr>
                <td>{{ faq.question }}</td>
                <td>{{ faq.reponse }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
