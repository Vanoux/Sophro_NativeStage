{% extends 'base.html.twig' %}

{% block title %}Mes Actualit√©s - Editer -{% endblock %}

{% block body %}

<h1>Edition de l'article : {{ article.titre }}</h1>

<div class="container mt-3">

    {{ form_start(formArticle) }}

    {{ form_row(formArticle.titre, {'attr' : {'placeholder': "Titre de l'article"}}) }}
    {{ form_row(formArticle.metadescription, {'attr' : {'placeholder': "Mots clefs (pas obligatoire)"}}) }}
    {{ form_row(formArticle.contenu, {'attr' : {'placeholder': "Contenu de l'article"}}) }}
    {{ form_row(formArticle.image, {'attr' : {'placeholder': "Url de l'image (pas obligatoire)"}}) }}
